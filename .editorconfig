# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{md,txt}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{js,jsx}]
indent_style = space
indent_size = 2

[*.{ts,tsx}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2
